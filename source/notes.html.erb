---
pageable: true
per_page: 2
layout: layout
title: 'Notes'
description: "A place for me to dump anything cool I learn / find / read / hear."
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
<div class="main-content">
  <h1>
    <span>Notes</span>
    <span>Inspiration</span>
    <span>Brain dump</span>
  </h1>
  <aside class="lead-in-detail"></aside>
  <section class="notes-list">

  <% blog.tags.sort.each do |tag, articles| %>
    <% if (tag == 'note') then %>
      <% articles.sort_by(&:title).each do |article| %>
      <article>
        <h2>
          <%= link_to article.title, article %>
        </h2>
        <time><%= article.date.strftime('%b %e, %Y') %></time>
        <%= article.summary %>
        <img src="<%= article.data.thumbnail_image %>">
      </article>
      <% end %>
    <% end %>
  <% end %>
  </section>
</div>
